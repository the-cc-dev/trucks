{
  "name": "trucks-cli",
  "version": "1.0.2",
  "description": "Web component compiler and package manager (cli)",
  "bin": {
    "trucks": "./bin/trucks"
  },
  "man": "./doc/man/trucks.1",
  "author": "muji <noop@xpm.io>",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tmpfs/trucks"
  },
  "dependencies": {
    "mkcli": "~1.0.32",
    "trucks": "*"
  },
  "devDependencies": {
    "chai": "~3.5.0",
    "coveralls": "~2.11.9",
    "istanbul": "~0.4.4",
    "mocha": "~2.5.3"
  },
  "scripts": {
    "clean": "rm -rf coverage target",
    "lint": "jshint . && jscs .",
    "target": "rm -rf target && mkdir target",
    "pretest": "npm run target",
    "test": "NODE_ENV=test mocha ${SPEC:-test/spec}",
    "precover": "npm run pretest",
    "cover": "NODE_ENV=test istanbul cover _mocha -- ${SPEC:-test/spec}",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  }
}
