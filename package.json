{
  "name": "trucks",
  "version": "0.2.3",
  "description": "Web component compiler and package manager",
  "author": "muji <noop@xpm.io>",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tmpfs/trucks"
  },
  "dependencies": {
    "babel-core": "~6.10.4",
    "cheerio": "~0.20.0"
  },
  "devDependencies": {
    "babel-cli": "~6.10.1",
    "babel-preset-es2015": "~6.9.0",
    "chai": "~3.5.0",
    "coveralls": "~2.11.9",
    "istanbul": "~0.4.4",
    "mocha": "~2.5.3"
  },
  "scripts": {
    "api": "mkapi src/index.js src/compile.js --level=2 --title=API > doc/API.md",
    "clean": "rm -rf coverage target",
    "build": "babel --presets es2015 src --out-dir lib",
    "prepublish": "npm run build",
    "lint": "jshint src test doc/readme && jscs src test doc/readme",
    "pretest": "rm -rf target && mkdir target && npm run build",
    "test": "NODE_ENV=test mocha ${SPEC:-test/spec}",
    "precover": "npm run pretest",
    "cover": "NODE_ENV=test istanbul cover _mocha -- ${SPEC:-test/spec}",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  }
}
