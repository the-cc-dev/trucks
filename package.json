{
  "name": "trucks",
  "version": "0.1.0",
  "description": "Skatejs compiler and component manager",
  "bin": "./bin/trucks",
  "author": "muji <noop@xpm.io>",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tmpfs/trucks"
  },
  "dependencies": {
    "acorn": "~3.2.0",
    "babel-core": "~6.10.4",
    "cheerio": "~0.20.0"
  },
  "devDependencies": {
    "babel-cli": "~6.10.1",
    "babel-preset-es2015": "~6.9.0",
    "chai": "~3.5.0",
    "coveralls": "~2.11.9",
    "istanbul": "~0.4.4",
    "mkcli": "~1.0.32",
    "mocha": "~2.5.3"
  },
  "scripts": {
    "clean": "rm -rf coverage target",
    "build": "babel --presets es2015 src --out-dir lib --source-maps",
    "prepublish": "npm run build",
    "lint": "jshint . && jscs .",
    "pretest": "rm -rf target && mkdir target && npm run build",
    "test": "NODE_ENV=test mocha ${SPEC:-test/spec}",
    "precover": "npm run pretest",
    "cover": "NODE_ENV=test istanbul cover _mocha -- ${SPEC:-test/spec}",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  }
}
