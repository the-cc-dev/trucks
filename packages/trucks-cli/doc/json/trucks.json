{
  "description": "Compiles web components to separate files for javascript, styles and template markup.",
  "names": [
    "trucks"
  ],
  "type": "program",
  "name": "trucks",
  "summary": "compiles web components",
  "synopsis": [
    "[flags] [options] [files...]"
  ],
  "options": {
    "out": {
      "key": "out",
      "description": "Output directory",
      "names": [
        "-o",
        "--out"
      ],
      "type": "option",
      "extra": " [dir]",
      "required": false,
      "multiple": false,
      "value": "cwd",
      "name": "--out"
    },
    "name": {
      "key": "name",
      "description": "Name for output files",
      "names": [
        "-n",
        "--name"
      ],
      "type": "option",
      "extra": " [val]",
      "required": false,
      "multiple": false,
      "value": "components",
      "name": "--name"
    },
    "html": {
      "key": "html",
      "description": "Template output file (--extract only)",
      "names": [
        "-m",
        "--html"
      ],
      "type": "option",
      "extra": " [file]",
      "required": false,
      "multiple": false,
      "name": "--html"
    },
    "css": {
      "key": "css",
      "description": "Stylesheet output file",
      "names": [
        "-s",
        "--css"
      ],
      "type": "option",
      "extra": " [file]",
      "required": false,
      "multiple": false,
      "name": "--css"
    },
    "js": {
      "key": "js",
      "description": "Javascript output file",
      "names": [
        "-j",
        "--js"
      ],
      "type": "option",
      "extra": " [file]",
      "required": false,
      "multiple": false,
      "name": "--js"
    },
    "rc": {
      "key": "rc",
      "description": "Configuration files to require",
      "names": [
        "-c",
        "--rc"
      ],
      "type": "option",
      "extra": " [file...]",
      "required": false,
      "multiple": true,
      "name": "--rc"
    },
    "extract": {
      "key": "extract",
      "description": "Extract templates",
      "names": [
        "-e",
        "--extract"
      ],
      "type": "flag",
      "name": "--extract"
    },
    "help": {
      "key": "help",
      "description": "Display help and exit",
      "names": [
        "-h",
        "--help"
      ],
      "type": "flag",
      "name": "--help"
    },
    "version": {
      "key": "version",
      "description": "Print the version and exit",
      "names": [
        "--version"
      ],
      "type": "flag",
      "name": "--version"
    }
  },
  "zsh": [
    {
      "info": "zsh",
      "literal": ":file:_files -g '*.html'"
    }
  ]
}
