{
  "name": "trucks",
  "version": "0.2.34",
  "description": "Web component compiler and package manager",
  "author": "muji <noop@xpm.io>",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tmpfs/trucks"
  },
  "engines": {
    "node": ">=4.0"
  },
  "dependencies": {
    "cheerio": "~0.20.0",
    "merge": "~1.2.0",
    "trucks-plugin-sources": "*",
    "trucks-plugin-load": "*",
    "trucks-plugin-parse": "*",
    "trucks-plugin-transform": "*",
    "trucks-plugin-generate": "*",
    "trucks-plugin-write": "*"
  },
  "devDependencies": {
    "babel-core": "~6.10.4",
    "babel-cli": "~6.10.1",
    "babel-preset-es2015": "~6.9.0",
    "chai": "~3.5.0",
    "coveralls": "~2.11.9",
    "express": "~4.14.0",
    "istanbul": "~0.4.4",
    "mocha": "~2.5.3",
    "skatejs": "~1.0.0-beta.7",
    "trucks-transform-csp": "*",
    "trucks-transform-skate": "*",
    "trucks-transform-style-extract": "*",
    "trucks-transform-trim": "*"
  },
  "scripts": {
    "clean": "rm -rf coverage target lib",
    "build": "babel --presets es2015 src --out-dir lib",
    "prepublish": "npm run build",
    "lint": "jshint src test doc && jscs src test/spec",
    "target": "rm -rf target && mkdir target",
    "pretest": "npm run target",
    "test": "NODE_ENV=test mocha ${SPEC:-test/spec}",
    "precover": "npm run pretest",
    "cover": "NODE_ENV=test istanbul cover --root src --dir packages/trucks/coverage _mocha -- ${SPEC:-test/spec}",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "report": "istanbul report --include 'packages/**/coverage/coverage.json'"
  }
}
